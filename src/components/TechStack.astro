---
import portfolioData from "../data/portfolio.json";
const { techStack } = portfolioData;
---

<section
    class="py-20 px-4 max-w-7xl mx-auto border-y border-zinc-900 bg-zinc-950/50"
>
    <div class="text-center mb-12">
        <h2 data-aos="fade-down" class="text-3xl font-bold text-zinc-100 mb-4">
            {techStack.title}
        </h2>
    </div>

    <div class="flex flex-wrap justify-center gap-6 max-w-4xl mx-auto">
        {
            techStack.items.map((tech, index) => (
                <div
                    data-aos="zoom-in"
                    data-aos-delay={index * 50}
                    class="flex flex-col items-center gap-2 group"
                >
                    <div class="w-16 h-16 bg-zinc-900 border border-zinc-800 rounded-xl flex items-center justify-center p-3 group-hover:border-indigo-500/50 group-hover:bg-zinc-800 transition-all duration-300 group-hover:-translate-y-1 shadow-lg">
                        <img
                            src={`https://cdn.simpleicons.org/${tech.icon}/white`}
                            alt={tech.name}
                            class="w-full h-full object-contain opacity-70 group-hover:opacity-100 transition-opacity"
                        />
                    </div>
                    <span class="text-xs font-medium text-zinc-500 group-hover:text-indigo-400 transition-colors">
                        {tech.name}
                    </span>
                </div>
            ))
        }
    </div>
</section>
