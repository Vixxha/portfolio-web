---
import portfolioData from "../data/portfolio.json";
const { about } = portfolioData;
---

<section id="about" class="py-20 px-4 max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div data-aos="fade-right" class="space-y-6">
            <h2
                class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-indigo-500 to-purple-500 bg-clip-text text-transparent"
            >
                {about.title}
            </h2>
            <p class="text-xl text-zinc-400 leading-relaxed">
                {about.description}
            </p>

            <ul class="space-y-4 pt-4">
                {
                    about.highlights.map((item) => (
                        <li class="flex items-start gap-3 text-zinc-300">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 text-indigo-500 shrink-0"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"
                                />
                            </svg>
                            <span>{item}</span>
                        </li>
                    ))
                }
            </ul>
        </div>

        <div data-aos="fade-left" class="relative">
            <div
                class="absolute inset-0 bg-indigo-500/10 blur-3xl rounded-full"
            >
            </div>
            {/* Placeholder for an illustrative image or code snippet visual */}
            <div
                class="relative bg-zinc-900 border border-zinc-800 rounded-2xl p-6 shadow-2xl rotate-3 hover:rotate-0 transition-transform duration-500"
            >
                <div class="flex gap-2 mb-4">
                    <div class="w-3 h-3 rounded-full bg-red-500"></div>
                    <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                    <div class="w-3 h-3 rounded-full bg-green-500"></div>
                </div>
                <div class="space-y-2 font-mono text-sm">
                    <div class="text-purple-400">
                        const <span class="text-blue-400">developer</span> = <span
                            class="text-yellow-400">{"{"}</span>
                    </div>
                    <div class="pl-4 text-zinc-300">
                        name: <span class="text-green-400">"Alexis"</span>,
                    </div>
                    <div class="pl-4 text-zinc-300">
                        role: <span class="text-green-400"
                            >"Full-Stack Dev"</span
                        >,
                    </div>
                    <div class="pl-4 text-zinc-300">
                        skills: [<span class="text-green-400">"Astro"</span>, <span
                            class="text-green-400">"React"</span
                        >, <span class="text-green-400">"AI"</span>]
                    </div>
                    <div class="text-yellow-400">{"}"}</div>
                </div>
            </div>
        </div>
    </div>
</section>
